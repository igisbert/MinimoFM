<style>
  header {
    padding: 1.5rem 1rem;
    background-color: var(--pine-green);
    display: flex;
    justify-content: space-between;
    align-items: center;
  }
  h1 {
    text-align: center;
    margin: 0;
    color: var(--rosy-brown);
    text-shadow: 0px 0px 20px
      color-mix(in srgb, var(--midnight-green), transparent 50%);
    font-weight: bold;
    font-size: 2.5rem;
  }

  button {
    cursor: pointer;
    background: var(--rosy-brown);
    border: none;
    border-radius: 50%;
    padding: 0.5rem;
    font-size: 1rem;
    font-weight: bold;
    width: 3rem;
    height: 3rem;
    display: flex;
    justify-content: center;
    align-items: center;
    /* z-index: 100; */
  }

  button img {
    width: 1.5rem;
    height: 1.5rem;
  }

  span {
    width: 3rem;
  }
</style>

<script>
  document.addEventListener("DOMContentLoaded", () => {
    const menuButton = document.getElementById("menu-button");
    const menu = document.querySelector("nav");

    if (menuButton && menu) {
      menuButton.addEventListener("click", () => {
        menu.classList.toggle("is-open");
      });

      menu.addEventListener("click", () => {
        menu.classList.remove("is-open");
      });
    }
  });
</script>
